<UserControl x:Class="UserList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ASManager2017"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <TreeView x:Name="myTreeView" HorizontalAlignment="Stretch" Height="auto" Margin="0,0,0,0" VerticalAlignment="Stretch" Width="auto">
        </TreeView>
        <Button x:Name="reloadButton" Content="Reload" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,25,0" Width="75" Background="{DynamicResource fadeBrush}"/>
    </Grid>
</UserControl>
